.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  +above($breakpoints.sm)
    max-width: 720px
    margin: 0 auto
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 970px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1184px

section
  font-size: 17px
  line-height: 120%
  +above($breakpoints.xxl)
    font-size: 18px
h1,
h2,
h3,
h4
  font-family: "FuturaPT-Heavy"
  font-weight: 900
  text-transform: uppercase

.d-flex
  display: flex
.d-block
  display: block
.d-i-block
  display: inline-block
.d-inline
  display: inline
.d-none
  display: none

.color-white
  color: $color-white
.color-black
  color: $color-black
.color-pink-1
  color: $color-pink-1
.color-viol-1
  color: $color-viol-1

.font-f-book
  font-family: "FuturaPT-Book"
  font-weight: 400
.font-f-med
  font-family: "FuturaPT-Medium"
  font-weight: 500
.font-f-demi
  font-family: "FuturaPT-Demi"
  font-weight: 600
.font-f-bold
  font-family: "FuturaPT-Bold"
  font-weight: 600
.font-f-h
  font-family: "FuturaPT-Heavy"
  font-weight: 900

.font-s-12
  font-size: 10px
  line-height: 140%
  +above($breakpoints.md)
    font-size: 11px
  +above($breakpoints.xxl)
    font-size: 12px
.font-s-14
  font-size: 11px
  line-height: 130%
  +above($breakpoints.md)
    font-size: 13px
  +above($breakpoints.xxl)
    font-size: 14px
.font-s-16
  line-height: 120%
  font-size: 14px
  +above($breakpoints.sm)
    font-size: 13px
  +above($breakpoints.md)
    font-size: 14px
  +above($breakpoints.xxl)
    font-size: 16px
.font-s-18
  font-size: 16px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 14px
  +above($breakpoints.md)
    font-size: 17px
  +above($breakpoints.xxl)
    font-size: 18px
.font-s-20
  font-size: 18px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 16px
  +above($breakpoints.md)
    font-size: 18px
  +above($breakpoints.xxl)
    font-size: 20px
.font-s-22
  font-size: 19px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 16px
  +above($breakpoints.md)
    font-size: 19px
  +above($breakpoints.xxl)
    font-size: 22px
.font-s-26
  font-size: 23px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 20px
  +above($breakpoints.md)
    font-size: 22px
  +above($breakpoints.xxl)
    font-size: 26px
.font-s-30
  font-size: 24px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 22px
  +above($breakpoints.md)
    font-size: 24px
  +above($breakpoints.xxl)
    font-size: 30px
.font-s-36
  font-size: 20px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 24px
  +above($breakpoints.md)
    font-size: 30px
  +above($breakpoints.xxl)
    font-size: 36px


.text-up
  text-transform: uppercase
.text-init
  text-transform: initial
.text-center
  text-align: center
.text-left
  text-align: left
.text-right
  text-align: right
.text-ital
  font-style: italic
.text-bold
  font-weight: bold

.tap-color
  -webkit-tap-highlight-color: transparent
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
