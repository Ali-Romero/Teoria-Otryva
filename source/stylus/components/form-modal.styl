.form-modal
  &__feedback
    color: $color-white
    background-color: $color-viol-1
    border-radius: 10px
    padding: 36px 10px 17px 10px;
    +above($breakpoints.sm)
      padding: 32px 17px 26px 17px
    +above($breakpoints.xxl)
      padding: 40px 32px

  &__info-title
    font-size: 20px;
    line-height: 120%
    margin: 0 0 18px 0
    font-family: "FuturaPT-Bold"
    font-weight: 700
    +above($breakpoints.sm)
      font-size: 22px
      margin: 0 0 20px 0
    +above($breakpoints.md)
      font-size: 24px
    +above($breakpoints.xxl)
      font-size: 27px
    br
      display: block

  &__feedback-item
    max-width: 290px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 280px
    +above($breakpoints.md)
      max-width: 300px
    +above($breakpoints.xxl)
      max-width: 330px

  &__feedback-input
    height: 48px
    margin-bottom: 10px
    +above($breakpoints.sm)
      margin-bottom: 10px
      height: 46px
    +above($breakpoints.md)
      height: 48px
    +above($breakpoints.xxl)
      height: 54px
      margin-bottom: 14px
    .input
      &__field
        height: 100%

  &__button
    margin-bottom: 14px

  &__agree
    font-size: 11px;
    line-height: 13px;
    +above($breakpoints.md)
      font-size: 13px;
      line-height: 15px;
    a
      text-decoration: underline
