.header
  position relative
  z-index 22
  background-color: $color-viol-1
  color: $color-white

  &__inner
    display: flex
    justify-content: space-between
    align-items: center
    padding: 14px 0
    +above($breakpoints.md)
      padding: 18px 0
    +above($breakpoints.xxl)
      padding: 30px 0

  &__logo
    img
      height: auto
      width 142px
      +above($breakpoints.sm)
        width 100px
      +above($breakpoints.md)
        width 140px
      +above($breakpoints.xxl)
        width 172px

  &__logo-description
    display: none
    +above($breakpoints.sm)
      display: block
      font-size: 17px
      line-height: 120%
    +above($breakpoints.xxl)
      font-size: 18px