.main-section
  position relative
  z-index 12
  color: $color-white
  background-image: url('../images/main-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__bg
    z-index -1
    position: absolute
    top: 0
    left: 0
    right 0
    bottom: 0
    &:before
      content: ""
      position: absolute
      z-index -1
      top: 0
      left: 0
      right 0
      bottom: 0
      background-color: rgba(233, 42, 132, 0.16);
    &:after
      content: ""
      position: absolute
      bottom: 0
      left: 0
      right 0
      background: linear-gradient(360deg, #1E152A 0%, rgba(45, 8, 25, 0) 100%)
      height: 132px
      +above($breakpoints.sm)
        height: 225px
      +above($breakpoints.md)
        height: 285px

  &__image
    position: absolute
    bottom: 0
    z-index -2
    right calc(50% - 158px)
    +above($breakpoints.sm)
      right calc(50% - 443px)
    +above($breakpoints.md)
      right calc(50% - 520px)
    +above($breakpoints.xxl)
      right calc(50% - 658px)
    img
      height: auto
      width 333px
      +above($breakpoints.sm)
        width 528px
      +above($breakpoints.md)
        width 650px
      +above($breakpoints.xxl)
        width 847px

  &__inner
    padding: 14px 0 300px 0
    position relative
    z-index 10
    text-align: center
    margin: 0 -10px
    +above($breakpoints.sm)
      margin: 0
      text-align: left
      padding: 60px 0 50px 0
    +above($breakpoints.md)
      padding: 80px 0 60px 0
    +above($breakpoints.xxl)
      padding: 186px 0 88px 0

  &__helper
    margin: 10px 0
    +above($breakpoints.sm)
      margin: 16px 0
    +above($breakpoints.md)
      margin: 18px 0
    +above($breakpoints.xxl)
      margin: 20px 0

  &__feedback
    margin: 0 0 30px 0
    +above($breakpoints.sm)
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      margin: 0 0 62px 0
    .feedback
      &__list
        flex-direction: column

  &__info
    width 240px
    border: 1px solid #fff;
    border-top: 0
    border-bottom: 0
    margin: 0 auto 20px auto
    +above($breakpoints.sm)
      margin: 0
      border: none
      width unset

  &__info-list
    +above($breakpoints.sm)
      display: flex

  &__info-item
    justify-content: center
    display: flex
    +above($breakpoints.sm)
      width auto !important

  &__info-icon
    img
      height: auto
      width 28px
      +above($breakpoints.md)
        width 32px
      +above($breakpoints.xxl)
        width 36px

  &__info-container
    display: flex
    align-items: center
    line-height: 100%
    gap: 5px
    +above($breakpoints.sm)
      width 134px
    +above($breakpoints.md)
      gap: 8px
      width 154px
    +above($breakpoints.xxl)
      width 174px
    &--2
      +above($breakpoints.sm)
        border: 1px solid #fff;
        border-top: 0
        border-bottom: 0
        width 160px
        padding: 0 16px
        margin: 0 16px 0 0
      +above($breakpoints.md)
        width 174px
        padding: 0 18px
        margin: 0 18px 0 0
      +above($breakpoints.xxl)
        width 194px
        padding: 0 20px
        margin: 0 20px 0 0