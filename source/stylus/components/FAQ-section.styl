.FAQ-section
  &__inner
    padding: 0 0 56px 0
    +above($breakpoints.sm)
      padding: 0 0 70px 0
    +above($breakpoints.md)
      padding: 0 0 90px 0
    +above($breakpoints.xxl)
      padding: 0 0 150px 0

  &__head
    display: flex
    margin: 0 0 20px 0
    flex-direction: column
    gap: 12px
    +above($breakpoints.sm)
      gap: 55px

  &__info
    margin: 0 0 30px 0
    +above($breakpoints.md)
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      margin: 0 0 50px 0

  &__info-list
    border-top: 1px solid rgba(255, 255, 255, 0.5);

  &__info-item
    border-bottom: 1px solid rgba(255, 255, 255, 0.5);
    padding: 11px 0
    +above($breakpoints.md)
      padding: 16px 0
    +above($breakpoints.xxl)
      padding: 20px 0

  &__info-container
    margin: 0 auto
    display: flex
    gap: 10px
    width 308px
    +above($breakpoints.sm)
      width 254px
    +above($breakpoints.md)
      width 280px
    +above($breakpoints.xxl)
      width 316px
