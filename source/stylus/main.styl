@font-face
  font-family: "FuturaPT-Book"
  src: url('../fonts/FuturaPT-Book.woff'), url('../fonts/FuturaPT-Book.woff2')
  font-display: swap
@font-face
  font-family: "FuturaPT-Medium"
  src: url('../fonts/FuturaPT-Medium.woff'), url('../fonts/FuturaPT-Medium.woff2')
  font-display: swap
@font-face
  font-family: "FuturaPT-Demi"
  src: url('../fonts/FuturaPT-Demi.woff'), url('../fonts/FuturaPT-Demi.woff2')
  font-display: swap
@font-face
  font-family: "FuturaPT-Bold"
  src: url('../fonts/FuturaPT-Bold.woff'), url('../fonts/FuturaPT-Bold.woff2')
  font-display: swap
@font-face
  font-family: "FuturaPT-Heavy"
  src: url('../fonts/FuturaPT-Heavy.woff'), url('../fonts/FuturaPT-Heavy.woff2')
  font-display: swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

.page
  display: flex
  flex-direction: column
  min-height: 100%
  overflow: hidden
  position relative

  &--thanks
    color: $color-white-2
    font-size: 13px
    line-height: 130%
    +above($breakpoints.xxl)
      font-size: 16px
    .header
      background-color: $color-green-1

  &__content
    flex: 1
    &--layout
      display: flex
      justify-content: center
      align-items: center
      flex-direction: column
